<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="85dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/basicCalcButton"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="115dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="114dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Basic Calculator"
            android:textAllCaps="true"
            android:textStyle="italic" />

        <Button
            android:id="@+id/gradeCalcButton"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="115dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="114dp"
            android:text="Grade Calculator"
            android:textAllCaps="true"
            android:textStyle="italic" />

        <Button
            android:id="@+id/graphCalcButton"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="115dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="100dp"
            android:text="Graphing Calculator"
            android:textAllCaps="true"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="30dp"
        android:text="Choose a Calculator"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>